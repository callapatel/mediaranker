<div class='container'>
  <h3> Edit Book </h3>
  <%= form_for @book do |f| %>
          <p><%= f.label :name %>:</p>
          <p><%= f.text_field :name %></p>
          <p><%= f.label :author %>:</p>
          <p><%= f.text_field :author %></p>
          <p><%= f.label :description %>:</p>
          <p><%= f.text_field :description %></p>
          <p><%= f.submit %></p>
        <% end %>
</div>
