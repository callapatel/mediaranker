<h2>Album Name: <%= @album.name %>
<small>Artist: <%= @album.artist %></small></h2>
<h4>Ranked: <%= @album.rank %></h4>
<%= @album.description %><br></br>


<button type="button" class="btn btn-default"><%= link_to "Edit #{@album.name}", edit_album_path %></button>
<button type="button" class="btn btn-danger active"><%= link_to "Destroy", album_path(@album.id), :method => :delete, :confirm => "are you sure you want to delete?" %></button>
<button type="button" class="btn btn-default"><%= link_to "View All Media", root_path %></button>
<button type="button" class="btn btn-default"><%= link_to "View All Albums", album_show_path %></button>
<button type="button" class="btn btn-primary btn-lg active"><%= link_to "upvote", album_upvote_path(:id => @album.id) %></button>
